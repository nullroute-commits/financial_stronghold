# Development Environment Configuration
# Django Settings
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development
SECRET_KEY=dev-only-secret-key-replace-in-production-12345678901234567890

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/django_app
POSTGRES_DB=django_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Cache Configuration
CACHE_URL=memcached://memcached:11211
MEMCACHED_MEMORY=64
MEMCACHED_CONNECTIONS=1024
MEMCACHED_THREADS=4

# Message Queue Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_MANAGEMENT_PORT=15672

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Logging Configuration
LOG_LEVEL=DEBUG
DJANGO_LOG_LEVEL=DEBUG

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Docker Platform
DOCKER_PLATFORM=linux/amd64