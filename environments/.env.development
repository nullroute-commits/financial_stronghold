# Development Environment Configuration
# Django 5 Multi-Architecture CI/CD Pipeline
# Last updated: 2025-01-02 by Sprint 0 Team Alpha

# Django Configuration
DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings.development
SECRET_KEY=dev-secret-key-change-in-production-12345678901234567890
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web

# Database Configuration
DATABASE_ENGINE=django.db.backends.postgresql
POSTGRES_DB=django_app_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_CONN_MAX_AGE=60
DATABASE_CONN_HEALTH_CHECKS=True

# Cache Configuration (Memcached)
MEMCACHED_SERVERS=memcached:11211
CACHE_KEY_PREFIX=dev_app
CACHE_VERSION=1
CACHE_DEFAULT_TIMEOUT=300
MEMCACHED_SOCKET_TIMEOUT=3.0

# Message Broker Configuration (RabbitMQ)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Logging Configuration
LOG_LEVEL=DEBUG
DJANGO_LOG_LEVEL=DEBUG

# Security Configuration
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# RBAC Configuration
RBAC_CACHE_TIMEOUT=300
RBAC_SESSION_TIMEOUT=3600

# Audit Configuration
AUDIT_ENABLED=True
AUDIT_LOG_MODELS=True
AUDIT_LOG_REQUESTS=True
AUDIT_LOG_AUTHENTICATION=True

# Time Zone
TIME_ZONE=UTC
USE_TZ=True

# SQLAlchemy Configuration (Disable for Django-only mode)
SQLALCHEMY_ENABLED=False

# Development Tools
DJANGO_DEBUG_TOOLBAR=True