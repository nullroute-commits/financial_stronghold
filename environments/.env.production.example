# Production Environment Configuration Template
# Django 5 Multi-Architecture CI/CD Pipeline
# IMPORTANT: Copy to .env.production and update with real values
# Last updated: 2025-01-02 by Sprint 0 Team Alpha

# Django Configuration
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.production
SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_KEY_50_CHARS_MINIMUM
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
DATABASE_ENGINE=django.db.backends.postgresql
POSTGRES_DB=django_app_prod
POSTGRES_USER=django_user
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_HOST=your-db-host.com
POSTGRES_PORT=5432
DATABASE_CONN_MAX_AGE=60
DATABASE_CONN_HEALTH_CHECKS=True

# Cache Configuration (Memcached)
MEMCACHED_SERVERS=your-cache-host:11211
CACHE_KEY_PREFIX=prod_app
CACHE_VERSION=1
CACHE_DEFAULT_TIMEOUT=300
MEMCACHED_SOCKET_TIMEOUT=3.0

# Message Broker Configuration (RabbitMQ)
RABBITMQ_HOST=your-rabbitmq-host.com
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=prod_user
RABBITMQ_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
RABBITMQ_VHOST=/prod

# Logging Configuration
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=WARNING

# Security Configuration
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# RBAC Configuration
RBAC_CACHE_TIMEOUT=600
RBAC_SESSION_TIMEOUT=7200

# Audit Configuration
AUDIT_ENABLED=True
AUDIT_LOG_MODELS=True
AUDIT_LOG_REQUESTS=True
AUDIT_LOG_AUTHENTICATION=True

# Time Zone
TIME_ZONE=UTC
USE_TZ=True

# SQLAlchemy Configuration (Disable for Django-only mode)
SQLALCHEMY_ENABLED=False

# Production Monitoring
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=production