# Testing Environment Configuration
# Django Settings
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.testing
SECRET_KEY=test-secret-key-for-testing-only-12345678901234567890
TESTING=True

# Database Configuration (Use SQLite for testing)
DATABASE_URL=sqlite:///test_db.sqlite3

# Cache Configuration (Use dummy cache for testing)
CACHE_URL=dummy://

# Message Queue Configuration (Use memory broker for testing)
RABBITMQ_URL=memory://localhost

# Redis Configuration (Use fake Redis for testing)
REDIS_URL=redis://localhost:6379/1

# Logging Configuration
LOG_LEVEL=WARNING
DJANGO_LOG_LEVEL=ERROR

# Security Configuration
ALLOWED_HOSTS=testserver,localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://testserver

# Testing Flags
CELERY_TASK_ALWAYS_EAGER=True
CELERY_TASK_EAGER_PROPAGATES=True

# Docker Platform
DOCKER_PLATFORM=linux/amd64